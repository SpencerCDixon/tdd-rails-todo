<h1>Todos</h1>

<%= link_to "Add a new todo", new_todo_path %>
<ul class="todos">
  <% @todos.each do |t| %>
    <li class=" <%= "completed" if t.completed? %>">
      <%= t.title %>
      <% if t.completed? %>
        <%= button_to "Mark incomplete", todo_completion_path(t), method: :delete %>
      <% else %>
        <%= button_to "Mark complete", todo_completion_path(t) %>
      <% end -%>
    </li>
  <% end -%>
</ul>

